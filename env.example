# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# --------------------------------------------
# Application Settings
# --------------------------------------------
APP_NAME="Technical Meetings"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:3000

# --------------------------------------------
# Database Settings
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=technical_meetings
DB_USERNAME=root
DB_PASSWORD=

# --------------------------------------------
# Mail Settings (if needed later)
# --------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=smtp.office365.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls

# --------------------------------------------
# File Upload Settings
# --------------------------------------------
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Database connection
DATABASE_URL="mysql://user:password@localhost:3306/technical_meetings"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-here"

# Cookie settings
COOKIE_NAME="technical_meetings_session"
COOKIE_PASSWORD="your-cookie-password-here"